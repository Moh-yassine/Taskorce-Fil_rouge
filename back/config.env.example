# Environment variables for TaskForce Symfony Backend
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL="mysql://root:password@127.0.0.1:3306/taskforce?serverVersion=8.0.32&charset=utf8mb4"

# Application Configuration
APP_ENV=dev
APP_SECRET=your-secret-key-here-change-in-production
APP_DEBUG=true

# Mailer Configuration
MAILER_DSN=smtp://localhost:1025

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_PASSPHRASE=your-jwt-passphrase-here-change-in-production

# API Configuration
API_VERSION=v1
CORS_ALLOW_ORIGIN=http://localhost:8080

# Logging Configuration
LOG_LEVEL=debug

# Cache Configuration
CACHE_DRIVER=file

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
